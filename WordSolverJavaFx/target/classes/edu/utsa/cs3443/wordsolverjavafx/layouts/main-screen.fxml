<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="15" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.utsa.cs3443.wordsolverjavafx.MainScreenController">


    <HBox alignment="CENTER" spacing="15">
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" fx:id="usernameDisp" />
        <ImageView fx:id="logoImage" fitHeight="100" fitWidth="300" />
    </HBox>


    <HBox alignment="CENTER" spacing="15">
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Account Age: " />
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" fx:id="accAgeDisp" />
    </HBox>


    <HBox alignment="CENTER" spacing="15">
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Solves: " />
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" fx:id="solvesDisp" />
    </HBox>

    <HBox alignment="CENTER" spacing="15">
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Cheated Solves: " />
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" fx:id="cheatedDisp" />
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" fx:id="percentDisp" />
    </HBox>

    <HBox alignment="CENTER" spacing="15">
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Wordlist Path: " />
        <Button fx:id="wordlistButton" onAction="#onWordlistClick" text="Wordlist" />
    </HBox>



    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="solverButton" onAction="#onSolverClick" text="Solver" />
        <Button fx:id="normalButton" onAction="#onNormalClick" text="Normal" />
    </HBox>


